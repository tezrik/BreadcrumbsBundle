<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <!-- Our service, for controllers -->
        <service id="Huluti\BreadcrumbsBundle\Model\Breadcrumbs" class="Huluti\BreadcrumbsBundle\Model\Breadcrumbs">
            <call method="setRouter">
                <argument type="service" id="router" />
            </call>
            <tag name="kernel.reset" method="clear" />
        </service>
        <service id="huluti_breadcrumbs" alias="Huluti\BreadcrumbsBundle\Model\Breadcrumbs" public="true" />

        <!-- Templating helper -->
        <service id="huluti_breadcrumbs.helper" class="Huluti\BreadcrumbsBundle\Templating\Helper\BreadcrumbsHelper" public="true">
            <argument type="service" id="twig" />
            <argument type="service" id="huluti_breadcrumbs" />
            <argument>%huluti_breadcrumbs.options%</argument>
        </service>

        <!-- Twig extension -->
        <service id="huluti_breadcrumbs.twig" class="Huluti\BreadcrumbsBundle\Twig\Extension\BreadcrumbsExtension" public="true">
            <argument type="service" id="service_container" />
            <tag name="twig.extension" />
        </service>

        <service id="huluti_breadcrumbs.listener" class="WhiteOctober\BreadcrumbsBundle\EventListener\BreadcrumbListener">
            <tag name="kernel.event_listener" event="kernel.controller_arguments" method="onKernelController"
                 priority="-1"/>
            <argument type="service" id="WhiteOctober\BreadcrumbsBundle\Model\Breadcrumbs"/>
            <argument type="service" id="router"/>
        </service>

    </services>

</container>
